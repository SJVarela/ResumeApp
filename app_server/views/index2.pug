extends layout

mixin generateProjects(projects)
    each project in projects
        .col.s12.m6
            .card.large
                .card-content
                    h3.header
                        b= project.title
                    p.flow-text= project.description
                .card-action.grey.lighten-3
                    a.btn(href=project.link, target = "_blank")
                        i.fab.fa-github.left
                        strong Watch it!

mixin generateEducations(educations)
    ul.collection
        each education in educations
            li.collection-item                
                h4= education.inst
                    i.fas.fa-university.left
                h5= education.date
                    i.fa.fa-calendar-alt.left.grey-text
                h5= education.degree
mixin generateList(items)
    each item in items
        .col.s2
            .card
                .card-image
                    img.circle.responsive-img(src=item.imgUri)
                .card-content.hide-on-small-only
                    p.center-align.black-text.truncate= item.name

block content
    header
        .parallax-container.valign-wrapper.center
            .container
                h1.white-text= resume.name
                h4.white-text= resume.job
            .parallax
                img(src="./images/ethBackground.jpg")
    main
        .section.grey.lighten-5
            .container
                .row.section
                    h1.header Projects
                    +generateProjects(resume.projects)
                .row.section
                    h1.header Languages
                    +generateList(resume.languages)
                .row.section
                    h1.header Frameworks  
                    +generateList(resume.frameworks)
                .row.section
                    h1.header Databases
                    +generateList(resume.databases)
                .row.section
                    h1.header Tools
                    +generateList(resume.tools)
                .row.section
                    h1.header Education
                    +generateEducations(resume.education)
    footer.page-footer
        .container
            .row.center
                h4 Contact me!
                a(href="https://www.linkedin.com/in/sjaviervarela/", target = "_blank")
                    i.icon.fab.fa-linkedin.medium
                a(href="https://github.com/SJVarela", target = "_blank")
                    i.icon.fab.fa-github-square.grey-text.medium 
        .footer-copyright
            .container
                p Â©2019 Santiago Varela 


