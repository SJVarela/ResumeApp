extends layout

mixin generateProjects(projects)
    each project in projects
        .col.s12.m6
            .card.medium
                .card-content
                    h3.grey-text
                        b= project.title
                    p.flow-text= project.description
                .card-action.grey.lighten-3
                    a.btn.grey(href=project.link, target = "_blank")
                        i.fab.fa-github.medium.left
                        strong Watch it!

mixin generateEducations(educations)
    ul.collection
        each education in educations
            li.collection-item                
                h4.grey-text= education.inst
                    i.fas.fa-university.left
                h5= education.date
                    i.fa.fa-calendar-alt.left.grey-text
                h5= education.degree
mixin generateList(items)
    each item in items
        .col.s2
            .card
                .card-image
                    img.circle.responsive-img(src=item.imgUri)
                .card-content.hide-on-small-only
                    p.center-align.black-text.truncate= item.name

block content
    .parallax-container.valign-wrapper.center
        .container
            h1.white-text= resume.name
            h4.white-text= resume.job
        .parallax
            img(src="./images/ethBackground.jpg")
    .section.grey.lighten-5
        .row.container
            h1.center About me            
            p.flow-text= resume.about
        .row.container
            h1.header.center Projects
            +generateProjects(resume.projects)
        .row.container
            h1.header.center Languages
            +generateList(resume.languages)
        .row.container
            h1.header.center Frameworks  
            +generateList(resume.frameworks)                                      
        .row.container
            h1.header.center Databases
            +generateList(resume.databases)
        .row.container
            h1.header.center Tools
            +generateList(resume.tools)                      
        .row.container
            h1.header.center Education
            +generateEducations(resume.education)
    .parallax-container
        .parallax
            img(src="./images/ethBackground.jpg")



    script(src="https://code.jquery.com/jquery-3.2.1.min.js")
    script(src="/js/materialize.min.js")
    script(src="/js/init.js")